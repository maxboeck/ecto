<!DOCTYPE HTML>
<!--[if (lte IE 8) ]><html class="no-js lte-ie8" lang="de" xmlns:og="http://opengraphprotocol.org/schema/" xmlns:fb="http://www.facebook.com/2008/fbml"><![endif]--> 
<!--[if (gte IE 9)|(gt IEMobile 7)|!(IEMobile)|!(IE)]><!--><html class="no-js" lang="en-US"><!--<![endif]-->

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="cleartype" content="on">

    <title>{{@blog.title}}</title>

    <meta name="description" content="{{@blog.description}}">

    {{! MOBILE STUFF }}
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {{! STYLESHEETS }}
    <link rel="stylesheet" id="ecto-stylesheet" href="{{asset 'css/style.min.css'}}" type="text/css" media="all" />
    <link rel='stylesheet' id="googlefonts-stylesheet" href="http://fonts.googleapis.com/css?family=Merriweather:400,400italic,700" type='text/css'>
    <link rel="stylesheet" id="fontawesome-stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" >
    <!--[if lte IE 8]>
    <link rel='stylesheet' id='linen-ie-only-css'  href="{{asset 'css/ie.css'}}" type='text/css' media='all' />
    <![endif]-->

    {{! GHOST HEAD HOOK }}
    {{ghost_head}}

    {{! RSS FEED }}
    <link rel="alternate" type="application/rss+xml" title="{{@blog.title}} Â» Feed" href="{{@blog.url}}/rss">

    {{! MODERNIZR }}
    <script type="text/javascript" src="{{asset '/js/libs/modernizr.dev.js'}}"></script>
</head>


<body class="{{body_class}}">

    {{! SCREENREADER SKIP LINKS }}
    <ul id="acessability-links" class="visuallyhidden">
        <li><a href="#content">skip to content</a></li>
        <li><a href="#nav">skip to navigation</a></li>
    </ul>

    {{! HEADER PARTIAL }}
    {{> header}}    

    {{! MAIN SECTION }}
    <div id="viewport">
        <div id="content">
            {{{body}}}
        </div>

        <div id="loader">
            <i class="fa fa-cog fa-spin"></i>
        </div>
    </div>

    {{! FOOTER }}
    <footer id="footer" class="clearfix" role="contentinfo">
        <div class="wrapper">
            <p class="footer-copyright">
                &copy; copyright {{date format="YYYY"}} / Published with <a href="http://tryghost.org">Ghost</a> / Ecto Theme by <a href="http://www.mxbdesign.at">MXB</a>
            </p>
        </div>
    </footer>

    <a href="#" id="topscroller" class="toplink">back to top</a>

    {{! GHOST FOOT HOOK }}
    {{ghost_foot}}

    {{! THEME SCRIPT }}
    <script type="text/javascript" src="{{asset '/js/ecto.min.js'}}"></script>

</body>
</html>