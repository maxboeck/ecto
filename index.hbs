{{!< default}}

<div class="post-index">
	{{#foreach posts}}

	    <article class="{{post_class}} animate-in">
			<a href="{{url}}" rel="bookmark" class="articlelink">
				<div class="wrapper">
		            <header class="post-header">
		                <time class="updated" datetime="{{published_at}}">
		                	{{date published_at format="MMMM DD, YYYY"}}
		                </time>
		                <h2 class="post-title">{{title}}</h2>
		            </header>

		            <div class="post-excerpt">
		                <p>{{excerpt words=25}}&hellip;</p>
		            </div>

		            <div class="read-more">
						<i class="fa fa-eye"></i> Read More
		            </div>
		        </div>
			</a>
		</article>
		
	{{/foreach}}
	<div id="expander"></div>
</div>

{{!pagination }}

{{#if pagination}}
    {{pagination}}
{{/if}}
